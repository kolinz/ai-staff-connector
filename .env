# AIエージェント
# --- Dify 設定 ---
## DifyのグローバルAPIキー
DIFY_API_KEY="" 
## 作成したChat AppのApp ID
DIFY_APP_ID=""
## DifyのベースURL (通常は http://localhost または Difyクラウドのアドレス)
DIFY_BASE_URL="http://localhost" 
## セッションを識別するためのユーザーID（任意のユニークな文字列）
DIFY_USER_ID=""

# STT（Speech To Text）
# --- ローカル Whisper STT 設定---
## faster-whisperで使用するモデル名 (例: tiny, base, small, medium, large-v2)
## モデルファイルはローカルに自動ダウンロードされます
WHISPER_LOCAL_MODEL="tiny"

# STT（Speech To Text）
# --- IBM Watson Speech to Text (STT) ---
## STTサービスインスタンスの資格情報を設定
WATSON_STT_API_KEY=""
WATSON_STT_URL=""
## 言語モデルの指定（例：ja-JP_BroadbandModel）
WATSON_STT_MODEL=""
## 音声認識に失敗した時に出力するログメッセージ
STT_WATSON_NO_SPEECH_MSG="音声が聞き取れませんでした。"

# STT（Speech To Text）
# --- OpenAI (STT/オプション) ---
## OpenAIのAPIキー
OPENAI_API_KEY=""
## 音声認識に失敗した時に出力するログメッセージ
STT_OPENAI_NO_SPEECH_MSG="音声が聞き取れませんでした。"

# TTS（Text To Speech）
# --- Voicevox ---
## Voicevox CoreまたはWebAPIのURL (例: http://127.0.0.1:50021)
VOICEVOX_BASE_URL="http://127.0.0.1:50021" 
## Voicevoxで使用する話者ID
VOICEVOX_SPEAKER_ID="47"

# TTS（Text To Speech）
# --- IBM Watson Text to Speech (TTS) ---
## TTSサービスインスタンスの資格情報を設定
WATSON_TTS_API_KEY=""
WATSON_TTS_URL=""
## 音声モデルの指定（例：ja-JP_EmiV3Voice）
WATSON_TTS_VOICE=""

# --- STT 有効化 ---
ENABLE_WHISPER_LOCAL="True"
ENABLE_WATSON_STT="False"
ENABLE_OPENAI_STT="False"

# --- TTS 有効化 ---
ENABLE_VOICEVOX="True"
ENABLE_WATSON_TTS="False"

# --- 会話制御設定 ---
# 会話をスタートさせるためのキーワードを設定します (例: ユイ、デカネさん)
WAKE_WORDS_LIST="デカネさん, でかねさん, デカネ, でかね, でかねーさん" 

# --- アイドル(待機状態)チャット設定 (ランダムに発話) ---
# アイドルチャットの間隔 (分)
IDLE_CHAT_INTERVAL_MINUTES="1" 
# アイドル時に話す文章 1
IDLE_SENTENCE_1="おてつだいいできることはありますか？ 起動キーワードをつけて話しかけてほしいです。"
# アイドル時に話す文章 2
IDLE_SENTENCE_2="今お話し相手！探しています！ 起動キーワードをつけて話しかけてほしいです。"
# アイドル時に話す文章 3
IDLE_SENTENCE_3="授業で困っていることはありますか？"

# --- 休憩モード設定 (口ずさみ) ---
## 休憩に入るためのキーワード (例: デカネさん、静かにして)
QUIET_KEYWORD="静かにして" 
## 口ずさんだ後の休憩時間 (分)
QUIET_DURATION_MINUTES="30" 
## 休憩中に口ずさむ文章 (ランダムに発話)
HUM_SENTENCE_1="ラララ〜、今日もいい天気だなぁ..."
HUM_SENTENCE_2="フフン、デカネさんは最強だぞ..."

# --- Outgoing Webhook 設定 ---
## Difyからの応答を送信する外部エンドポイントURL
OUTGOING_WEBHOOK_URL="http://127.0.0.1:1880/outgoing-webhook"
## Outgoing Webhook の有効化フラグ
ENABLE_OUTGOING_WEBHOOK="True"
## 送信時の認証トークン(オプション)
OUTGOING_WEBHOOK_AUTH_TOKEN=""
## タイムアウト設定(秒)
OUTGOING_WEBHOOK_TIMEOUT="10"
## リトライ回数
OUTGOING_WEBHOOK_RETRY_COUNT="3"
